 <paragraph index="9" node_type="writer"># Solicita os dados do usuário</paragraph>
 <paragraph index="10" node_type="writer">peso = float(input(&quot;Digite seu peso em kg: &quot;))</paragraph>
 <paragraph index="11" node_type="writer">altura = float(input(&quot;Digite sua altura em metros: &quot;))</paragraph>
 <paragraph index="13" node_type="writer"># Calcula o IMC</paragraph>
 <paragraph index="14" node_type="writer">imc = peso / (altura ** 2)</paragraph>
 <paragraph index="16" node_type="writer"># Mostra o valor do IMC</paragraph>
 <paragraph index="17" node_type="writer">print(f&quot;\nSeu IMC é: {imc:.2f}&quot;)</paragraph>
 <paragraph index="19" node_type="writer"># Classificação do IMC</paragraph>
 <paragraph index="20" node_type="writer">if imc &lt; 18.5:</paragraph>
 <paragraph index="21" node_type="writer">    classificacao = &quot;Magreza&quot;</paragraph>
 <paragraph index="22" node_type="writer">    grau = 0</paragraph>
 <paragraph index="23" node_type="writer">elif 18.5 &lt;= imc &lt;= 24.9:</paragraph>
 <paragraph index="24" node_type="writer">    classificacao = &quot;Normal&quot;</paragraph>
 <paragraph index="25" node_type="writer">    grau = 0</paragraph>
 <paragraph index="26" node_type="writer">elif 25.0 &lt;= imc &lt;= 29.9:</paragraph>
 <paragraph index="27" node_type="writer">    classificacao = &quot;Sobrepeso&quot;</paragraph>
 <paragraph index="28" node_type="writer">    grau = 1</paragraph>
 <paragraph index="29" node_type="writer">elif 30.0 &lt;= imc &lt;= 39.9:</paragraph>
 <paragraph index="30" node_type="writer">    classificacao = &quot;Obesidade&quot;</paragraph>
 <paragraph index="31" node_type="writer">    grau = 2</paragraph>
 <paragraph index="32" node_type="writer">else:</paragraph>
 <paragraph index="33" node_type="writer">    classificacao = &quot;Obesidade Grave&quot;</paragraph>
 <paragraph index="34" node_type="writer">    grau = 3</paragraph>
 <paragraph index="36" node_type="writer"># Mostra a classificação</paragraph>
 <paragraph index="37" node_type="writer">print(f&quot;Classificação: {classificacao}&quot;)</paragraph>
 <paragraph index="38" node_type="writer">print(f&quot;Grau de Obesidade: {grau}&quot;)</paragraph>
 <paragraph index="40" node_type="writer"># Comparações booleanas</paragraph>
 <paragraph index="41" node_type="writer">print(&quot;\nComparações Booleanas:&quot;)</paragraph>
 <paragraph index="42" node_type="writer">print(&quot;IMC menor que 18.5 (Magreza)?&quot;, imc &lt; 18.5)</paragraph>
 <paragraph index="43" node_type="writer">print(&quot;IMC entre 18.5 e 24.9 (Normal)?&quot;, 18.5 &lt;= imc &lt;= 24.9)</paragraph>
 <paragraph index="44" node_type="writer">print(&quot;IMC acima de 40 (Obesidade Grave)?&quot;, imc &gt; 40)</paragraph>
</indexing>
